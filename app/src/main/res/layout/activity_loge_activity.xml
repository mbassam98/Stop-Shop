<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Loge_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_log_in"
        android:gravity="center">

        <com.asura.library.views.PosterSlider
            android:id="@+id/poster_slider"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:defaultIndicator="circle"
            app:hideIndicators="false"
            app:imageSlideInterval="3300"
            app:layout_constraintTop_toTopOf="parent"
            app:loopSlides="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10px"
            android:text="@string/txtgetthebestcoffeeinthetown"
            android:textColor="#8C746A"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnregistere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20px"
            android:layout_weight="1"
            android:backgroundTint="#B98068"
            android:text="@string/btnregistere"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnlogine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20px"
            android:layout_weight="1"
            android:text="@string/btnlogine"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="10dp"
        android:layout_marginBottom="30dp" />
</LinearLayout>