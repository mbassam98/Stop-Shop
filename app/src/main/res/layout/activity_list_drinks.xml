<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    tools:context=".ListDrinksActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgbacklogein"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="List Drinks"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lytespresso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp">
        <LinearLayout
            android:layout_marginRight="31dp"
            android:gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_marginLeft="31dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/espresso"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="182dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Espresso"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="21dp"
            android:src="@drawable/next"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lytcappuccino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp">
        <LinearLayout
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cappuccino"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="150dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Cappuccino"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/next"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lytmacciato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp">
        <LinearLayout
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/macciato"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="160dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Macciato"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/next"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lytmocha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp">
        <LinearLayout
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mocha"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="180dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Mocha"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/next"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lytlatte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp">
        <LinearLayout
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="60dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/latte"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="185dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Latte"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/next"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>