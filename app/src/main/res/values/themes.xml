<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Design" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#C69A80</item>
        <item name="colorPrimaryVariant">#C69A80</item>
        <item name="colorOnPrimary">#624735</item>
        <item name="android:textColorPrimary">#624735</item>
        <item name="android:colorForeground">#C69A80</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="toolbarStyle">@style/CustomToolbarStyle</item>


        <item name="materialButtonStyle">@style/Widget.App.Button</item>

    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#C69A80</item>
    </style>

    <style name="CustomToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#624735</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>